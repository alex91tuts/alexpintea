---
layout: null
---
{ 
	{% assign posts = site.posts | sort | reverse  %}{% for post in posts %}{% if post.index == 1 %}
{{ post.title }}: [                         
                                 {% for product in products %}{% if product.category == post.title and product.price_discounted != "" %}
                                    { 
				  					"adv_name": "{{ product.adv_name }}",
                                    "category": "{{ product.category }}",
                                    "manufacturer": "{{ product.manufacturer }}",
                                    "product_name": "{{ product.product_name }}",
                                    "product_aff_link": "{{ product.product_aff_link }}",
                                    "product_pic": "{{ product.product_pic }}",
                                    "price_vat": {{ product.price_vat }},
                                    "price_discounted": {{ product.price_discounted }},
                                    "discount": {{ product.price_vat | minus:  product.price_discounted | times: 100 | divided_by: product.price_vat | floor | abs }}
                                    }{% unless forloop.last %},{% endunless %} {% endif %}{% endfor %} 
        
                   ]{% unless forloop.last %},{% endunless %}{% endif %}{% endfor %}

}