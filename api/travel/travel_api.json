---
layout: null
---
[
	{% for trip in site.travel %}
	{
		"titlu": "{{ trip.title }}",
		"data": "{{ trip.date | date_to_string }}",
		"imagine": "{{ trip.image }}",
		"link": "{{ trip.url }}",
		"oras": "{{ trip.oras }}",
		"categorie": "{{ trip.tara }}",
		"descriere": "{{ trip.descriere }}",
		"tags": [{% for tag in trip.tags %}"{{ tag }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
		"tag1": {% assign lun = trip.tags | size | minus: 1 %}{% for i in (0..lun) limit:1 %}"{{ stire.tags[i] }}"{% unless forloop.last %},{% endunless %}{% endfor %},
		"tag2": {% assign lun = trip.tags | size | minus: 1 %}{% for i in (0..lun) limit:1 offset:1  %}"{{ stire.tags[i] }}"{% unless forloop.last %},{% endunless %}{% endfor %},
		"tag3": {% assign lun = trip.tags | size | minus: 1 %}{% for i in (0..lun) limit:1 offset:2  %}"{{ stire.tags[i] }}"{% unless forloop.last %},{% endunless %}{% endfor %}
	}{% unless forloop.last %},{% endunless %}{% endfor %}
]
