---
layout: null
---
{% assign stiri = site.smarthome | sort: 'date' | reverse %}
[
	{% for stire in stiri  %}
	{
		"titlu": "{{ stire.title }}",
		"data": "{{ stire.date | date_to_string }}",
		"imagine": "{{ stire.image_path }}",
		"link": "{{ stire.url }}",
		"categorie": "{{ stire.categorie }}",
	  "descriere": "{{ stire.description }}",
		"tags": [{% for tag in stire.tags %}"{{ tag }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
		"tag1": {% assign lun = stire.tags | size | minus: 1 %}{% for i in (0..lun) limit:1 %}"{{ stire.tags[i] }}"{% unless forloop.last %},{% endunless %}{% endfor %},
		"tag2": {% assign lun = stire.tags | size | minus: 1 %}{% for i in (0..lun) limit:1 offset:1  %}"{{ stire.tags[i] }}"{% unless forloop.last %},{% endunless %}{% endfor %},
		"tag3": {% assign lun = stire.tags | size | minus: 1 %}{% for i in (0..lun) limit:1 offset:2  %}"{{ stire.tags[i] }}"{% unless forloop.last %},{% endunless %}{% endfor %}

	}{% unless forloop.last %},{% endunless %}{% endfor %}
]
