---
layout: null
---
{% assign reviews = site.reviews | sort: 'date' | reverse %}
[
	{% for review in reviews %}
	{
		"titlu": "{{ review.title }}",
		"data": "{{ review.date | date_to_string }}",
		"imagine": "{{ review.image_path }}",
		"link": "{{ review.url }}",
		"autor": "{{ review.author }}",
	  "intro": "{{ review.scor-intro }}",
		"categorie": "{{ review.categorie-review }}",
    {% if page.scor %}
		"scor": {% assign sum = 0 %}{% for item in review.opt %}{% assign sum = sum | plus:item.value %}{% endfor %}{% assign number = review.opt | size %}{% assign total = sum | divided_by: number | round: 1 %}{{ total }},
    {% endif %}
	  "tags": [{% for tag in review.tags %}"{{ tag }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
		"tag1": {% assign lun = review.tags | size | minus: 1 %}{% for i in (0..lun) limit:1 %}"{{ review.tags[i] }}"{% unless forloop.last %},{% endunless %}{% endfor %},
		"tag2": {% assign lun = review.tags | size | minus: 1 %}{% for i in (0..lun) limit:1 offset:1  %}"{{ review.tags[i] }}"{% unless forloop.last %},{% endunless %}{% endfor %},
		"tag3": {% assign lun = review.tags | size | minus: 1 %}{% for i in (0..lun) limit:1 offset:2  %}"{{ review.tags[i] }}"{% unless forloop.last %},{% endunless %}{% endfor %}
	}{% unless forloop.last %},{% endunless %}{% endfor %}
]
