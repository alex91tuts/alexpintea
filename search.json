---
layout: null
robots: YES
---
[
  {% for post in site.travel %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.tara }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
	    "image"     : "{{ post.image }}",
			"author"    : "{{ post.author }}",
	    "description"     : "{{ post.description }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
	,
	{% for post in site.stiri %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.categorie }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
	    "image"     : "{{site.url}}/assets/images/{{ post.image_path }}",
			"author"    : "{{ post.author }}",
	    "description"     : "{{ post.description }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
	,
	{% for post in site.smarthome %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.categorie }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
	    "image"     : "{{site.url}}/assets/images/{{ post.image_path }}",
			"author"    : "{{ post.author }}",
	    "description"     : "{{ post.description }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
	,
	{% for post in site.reviews %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.topic | upcase}}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
	    "image"     : "{{site.url}}/{{ post.meta_image }}",
			"author"    : "{{ post.author }}",
	    "description"     : "{{ post.description }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]

