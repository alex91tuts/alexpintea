---
layout: null
sitemap:
  exclude: 'yes'
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
	{% assign pagini = site.pages | where: "sitemap", "yes" %}
  {% for page in pagini %}
    {% unless page.sitemap.exclude == "yes" %}
    <url>
      <loc>{{ site.url }}{{ page.url | remove: "index.html" }}</loc>
      {% if page.date-modified %}
        <lastmod>{{ page.date-modified }}</lastmod>
      {% else %}
        <lastmod>{{ page.date }}</lastmod>
      {% endif %}
      {% if page.sitemap.priority %}
        <priority>{{ page.sitemap.priority }}</priority>
      {% else %}
        <priority>1</priority>
      {% endif %}
    </url>
    {% endunless %}
  {% endfor %}
	{% for review in site.reviews %}
    <url>
      <loc>{{ site.url }}{{ review.url | remove: "index.html" }}</loc>
      {% if page.date-modified %}
        <lastmod>{{ page.date-modified | date: "%Y-%m-%d" }}</lastmod>
      {% else  %}
        <lastmod>{{ review.date | date: "%Y-%m-%d" }}</lastmod>
      {% endif %}
      {% if page.sitemap.priority %}
        <priority>{{ page.sitemap.priority }}</priority>
      {% else %}
        <priority>0.7</priority>
      {% endif %}
    </url>
  {% endfor %}
